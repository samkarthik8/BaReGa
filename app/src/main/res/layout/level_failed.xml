<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_level_cleared">

    <TextView
        android:id="@+id/levelCleared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/level_failed_message"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yourScoreIs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/levelCleared"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/your_score_is"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/final_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yourScoreIs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/dummy_score"
        android:textColor="@android:color/white"
        android:textSize="45sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/okButton"
        style="@style/style_button_level_failed"
        android:layout_below="@+id/final_score"
        android:text="@string/ok_button_text" />
</RelativeLayout>
